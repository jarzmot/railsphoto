<% form_for @komentarz do |f| %>
  <%= f.error_messages %>
  <% if current_user %>
    <%= f.hidden_field :autor, :value => current_user[:login] %>
  <% else %>
    <p>
    <%= f.label :autor %><br />
    <%= f.text_field :autor %>
    </p>
  <% end %>
  <p>
    <%= f.label :tresc %><br />
    <%= f.text_area :tresc %>
    </p>
    <p> TEST </p>
  <p><%= f.submit "Dodaj komentarz" %></p>
<% end %>
