<% form_for @galeria do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :nazwa %><br />
    <%= f.text_field :nazwa %>
  </p>
  <p>
    <%= f.label :autor %><br />
    <%= f.text_field :autor %>
  </p>
  <p>
    <%= f.label :opis %><br />
    <%= f.text_area :opis %>
  </p>
  
  <p><%= f.submit "Utwórz galerię"%></p>
<% end %>
