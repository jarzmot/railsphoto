<% title "Galerie zdjęć" %>

<% content_for :head do %>
    <%= stylesheet_link_tag 'zdjecia' %>
    <%= ajaxful_rating_style %>  
<% end %>


<% form_tag zdjecia_path, :method => 'get' do %>
  <p>
  <%= text_field_tag :szukaj_opisu, params[:szukaj_opisu] %>
  <%= submit_tag "Szukaj zdjęć według ich opisu", :name => nil %>
  </p>
<% end %>


